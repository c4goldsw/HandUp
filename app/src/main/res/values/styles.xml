<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#ccffffff</item>
        <item name="colorControlHighlight">#ccffffff</item>
        <item name="android:textColorHint">#ccffffff</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="LoginTextColor">
        <item name="android:textColor">#CCFFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Course fragment styles
    <style name=>-->

    <!-- Profile fragment styles -->
    <style name="ProfileCard">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ProfileCardText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

</resources>
